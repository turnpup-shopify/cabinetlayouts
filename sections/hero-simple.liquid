{% comment %}
  Slow Down Section
  A calming, meditative section with background and centered text
{% endcomment %}

<div class="slow-down-section" style="
  margin-top: {{ section.settings.margin_top_desktop }}px;
  margin-right: {{ section.settings.margin_right_desktop }}px;
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  margin-left: {{ section.settings.margin_left_desktop }}px;
  padding-top: {{ section.settings.padding_top_desktop }}px;
  padding-right: {{ section.settings.padding_right_desktop }}px;
  padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  padding-left: {{ section.settings.padding_left_desktop }}px;
  background-color: {{ section.settings.background_color }};
  {% if section.settings.background_image %}
    background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  {% endif %}
  min-height: {{ section.settings.section_min_height_desktop }}px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
">
  {% if section.settings.background_video %}
    {{ section.settings.background_video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, controls: false, class: 'slow-down-video' }}
  {% endif %}

  <div class="slow-down-content" style="
    text-align: {{ section.settings.text_alignment }};
    max-width: {{ section.settings.content_max_width }}px;
    width: 100%;
    padding: 0 20px;
  ">
    
    {% if section.settings.show_asterisk %}
    <div class="asterisk-text" style="
      font-family: {{ section.settings.asterisk_font_family }};
      font-size: {{ section.settings.asterisk_font_size_desktop }}px;
      color: {{ section.settings.asterisk_color }};
      font-weight: {{ section.settings.asterisk_font_weight }};
      margin-bottom: {{ section.settings.asterisk_spacing_desktop }}px;
      line-height: 1;
    ">
      {{ section.settings.asterisk_text }}
    </div>
    {% endif %}

    <h2 class="main-text" style="
      font-family: {{ section.settings.main_font_family }};
      font-size: {{ section.settings.main_font_size_desktop }}px;
      color: {{ section.settings.main_color }};
      font-weight: {{ section.settings.main_font_weight }};
      margin: 0 0 {{ section.settings.main_spacing_desktop }}px 0;
      line-height: 1.1;
    ">
      {{ section.settings.main_text }}
    </h2>

    {% if section.settings.show_secondary_text %}
    <div class="secondary-text-wrapper" style="
      display: inline-block;
      border: {{ section.settings.secondary_border_width }}px solid {{ section.settings.secondary_border_color }};
      border-radius: {{ section.settings.secondary_border_radius }}px;
      padding: {{ section.settings.secondary_padding_vertical }}px {{ section.settings.secondary_padding_horizontal }}px;
    ">
      <p class="secondary-text" style="
        font-family: {{ section.settings.secondary_font_family }};
        font-size: {{ section.settings.secondary_font_size_desktop }}px;
        color: {{ section.settings.secondary_color }};
        font-weight: {{ section.settings.secondary_font_weight }};
        margin: 0;
        line-height: 1.2;
      ">
        {{ section.settings.secondary_text }}
      </p>
    </div>
    {% endif %}

  </div>
</div>

<style>
  .slow-down-section {
    transition: all 0.3s ease;
  }

  .slow-down-section .slow-down-video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
    pointer-events: none;
  }

  .slow-down-content {
    position: relative;
    z-index: 1;
  }

  @media screen and (max-width: 768px) {
    .slow-down-section {
      margin-top: {{ section.settings.margin_top_mobile }}px !important;
      margin-right: {{ section.settings.margin_right_mobile }}px !important;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px !important;
      margin-left: {{ section.settings.margin_left_mobile }}px !important;
      padding-top: {{ section.settings.padding_top_mobile }}px !important;
      padding-right: {{ section.settings.padding_right_mobile }}px !important;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px !important;
      padding-left: {{ section.settings.padding_left_mobile }}px !important;
      min-height: {{ section.settings.section_min_height_mobile }}px !important;
    }

    .asterisk-text {
      font-size: {{ section.settings.asterisk_font_size_mobile }}px !important;
      margin-bottom: {{ section.settings.asterisk_spacing_mobile }}px !important;
    }

    .main-text {
      font-size: {{ section.settings.main_font_size_mobile }}px !important;
      margin-bottom: {{ section.settings.main_spacing_mobile }}px !important;
    }

    .secondary-text {
      font-size: {{ section.settings.secondary_font_size_mobile }}px !important;
    }
  }
</style>

